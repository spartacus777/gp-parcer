<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/pb"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="12dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:text="status : not running"/>

    <ImageView
        android:id="@+id/ivStartStop"
        android:elevation="12dp"
        android:background="@drawable/startstop"
        android:scaleType="center"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivStartStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="12dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDownloadAsFile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:padding="10dp"
            android:text="Download [Logs]"/>

        <TextView
            android:id="@+id/tvLogAsLogs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="10dp"
            android:text="Print to log [Logs]"/>

    </LinearLayout>



</RelativeLayout>